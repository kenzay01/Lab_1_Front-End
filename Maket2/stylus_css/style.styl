primary-color = #252a4f
secondary-color = #4c2813
hover-color = #6d3c1b
cart-hover-color = #343b72
link-hover-color = #773c1b
buy-button-color = #69371a
buy-button-hover = #773c1b
text-color = aliceblue

* 
  margin 0
  padding 0
  box-sizing border-box
  font-family "Reddit Sans Condensed", sans-serif
  font-optical-sizing auto

body
  background-color aliceblue

.search-header
  display grid
  grid-template-columns auto 1fr
  align-items center
  gap 65px
  margin 30px 30px 30px 45px

  .logo
    width 125px

.search-container
  display grid
  grid-template-columns 1fr auto
  align-items center
  
.search-bar
  display grid
  grid-template-columns 1fr auto
  width 80%
  background-color primary-color
  border-radius 5px
  margin-left 100px

  .search-input
    background-color inherit
    width 100%
    padding 10px
    border none
    border-radius 5px
    font-size 16px
    outline none
    color text-color

  .btn-search
    padding 10px
    border none
    cursor pointer
    background-color secondary-color
    border-radius 5px
    transition all 0.1s

    &:hover
      background-color hover-color

    .search-icon
      width 20px
      filter invert(1)

.btn-cart
  padding 18px 36px
  border none
  cursor pointer
  background-color primary-color
  border-radius 5px
  transition all 0.1s
  font-size 18px
  color text-color

  &:hover
    background-color cart-hover-color

.container
  display grid
  grid-template-columns 20% 80%
  grid-template-rows auto
  margin 10px

nav
  display flex
  flex-direction column
  align-items flex-start
  padding 15px
  background-color primary-color
  border-radius 10px
  margin-left 15px

  a
    margin-bottom 10px
    text-decoration none
    color text-color
    font-size 18px
    transition all 0.1s

    &:hover
      color link-hover-color
      cursor pointer

.content
  display grid
  grid-template-columns repeat(auto-fill, 250px)

.item
  display flex
  flex-direction column
  align-items center
  margin 5px 20px
  background-color primary-color
  border-radius 5px
  border 2px solid primary-color

  .item-img
    width 100%
    border-radius 5px 5px 0 0
    object-fit cover
    height 150px

  .item-details
    display flex
    justify-content center
    gap 10px
    width 100%
    padding 10px

    .item-info
      display flex
      flex-direction column
      gap 5px

      .item-name
        font-size 16px
        color text-color
        font-weight bold

      .item-price
        font-size 14px
        color text-color

    .btn-buy
      padding 10px 25px
      height 40px
      border none
      cursor pointer
      background-color buy-button-color
      color text-color
      border-radius 5px
      transition all 0.1s

      &:hover
        background-color buy-button-hover

      &.btn-buy
        margin-left 10px

@media (max-width: 768px)
  .logo
    width 175px
    margin 10px

  .search-header
    grid-template-columns 1fr
    gap 10px
    margin-top 20px

  .search-bar
    margin-left 0

  .container
    display block
    margin 10px 50px

  nav
    margin 0
    margin-bottom 10px
    flex-direction row
    justify-content space-around

    a
      font-size 14px
      margin 0

  .content
    grid-template-columns 1fr 1fr
    gap 15px

  .item
    margin 10px auto

    .item-img
      width 100%
      height 100%

    .item-details
      flex-direction column
      gap 10px

      .btn-buy
        margin-left 0
